@model List<Product>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.xyz/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
    .table-container
    {
        padding: 20px;
        margin-top: 20px;
    }
</style>
<h2>Search Results</h2>
@if (Model.Count() == 0)
{
    <p>No results found.</p>
}
else
{
    <div class="container table-container">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>ShortDesc</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>
                            <span class="badge badge-primary">@product.Category.Name</span>
                        </td>
                        <td>@product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
}
</div>
}